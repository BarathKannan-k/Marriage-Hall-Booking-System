    <form action="/bb" method="POST">
        <div class="tm-form1">
    <input type="text" name="name" placeholder="Name">  
    <input type="email" name="email" placeholder="E-mail"> 
    <label  for="rooms" id="inlinelable">Venue</label>
    <select name="halls" id="rooms">
        <option value="Banquet Halls">Banquet Halls</option>
        <option value="Sea-side Venue">Sea-side Venue</option>
        <option value="Hotel Ballroom">Hotel Ballroom</option>
        <option value="Garden Venue">Garden Venue</option>
        <option value="Destination Wedding">Destination Wedding </option>
        <option value="Church Wedding">Church wedding</option>
    </select> 
    <label  for="event" id="inlinelable">Event</label>
    <select name="event" id="rooms">
        <option value="Engagement Day">Engagement Day</option>
        <option value="Wedding Day">Wedding Day</option>
        <option value="Reception">Reception</option>
        
    </select> 
    <label  for="state" id="inlinelable">State</label>
    <select name="state" id="rooms">
        <option value="Mumbai">Mumbai</option>
        <option value="Thane">Delhi</option>
        <option value="Andheri">Rajasthan</option>
        
    </select> 
    <div class="tm-num2" id="handleCounter2">      
        <label for="number2">Number of Guests</label><br/>
        <button type="button" class="counter-minus btn btn-primary">-</button>
        <input type="text" name="guests" id="number2" value="1">
            <button type="button" class="counter-plus btn btn-primary">+</button>
            </div>
             
      {{!-- <textarea  placeholder="Your message..." rows="4" name="message"></textarea>       --}}
